{
	"name": "next-app-starter",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"prepare": "husky install",
		"format": "prettier --write \"./app/**/*.{js,ts,jsx,tsx}\""
	},
	"dependencies": {
		"next": "13.1.2",
		"react": "18.2.0",
		"react-dom": "18.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.2",
		"@next/font": "13.1.2",
		"@types/node": "18.11.18",
		"@types/react": "18.0.26",
		"@types/react-dom": "18.0.10",
		"@typescript-eslint/eslint-plugin": "^5.48.2",
		"@typescript-eslint/parser": "^5.48.2",
		"autoprefixer": "^10.4.13",
		"eslint": "8.32.0",
		"eslint-config-next": "13.1.2",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-tailwindcss": "^3.8.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.0",
		"postcss": "^8.4.21",
		"prettier": "^2.8.3",
		"tailwindcss": "^3.2.4",
		"typescript": "4.9.4"
	},
	"lint-staged": {
		"*": [
			"prettier --write \"./app/**/*.{js,ts,jsx,tsx}\"",
			"eslint --fix \"./app/**/*.{js,ts,jsx,tsx}\""
		]
	}
}
