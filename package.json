{
	"name": "next-app-starter",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"prepare": "husky install",
		"format": "prettier --write \"./{app,pages}/**/*.{js,ts,jsx,tsx}\""
	},
	"dependencies": {
		"next": "13.2.3",
		"react": "18.2.0",
		"react-dom": "18.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"@types/node": "18.11.18",
		"@types/react": "18.0.26",
		"@types/react-dom": "18.0.10",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"autoprefixer": "^10.4.13",
		"eslint": "8.32.0",
		"eslint-config-next": "13.2.3",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-tailwindcss": "^3.10.1",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.2",
		"postcss": "^8.4.21",
		"prettier": "^2.8.4",
		"tailwindcss": "^3.2.7",
		"typescript": "4.9.4"
	},
	"lint-staged": {
		"./{app,pages}/**/*.{js,ts,jsx,tsx}": [
			"prettier --write",
			"eslint --config '.eslintrc-commit.js' --fix"
		]
	}
}
